@model WebBanSach.Model.Category
<form method="post" asp-action="Edit">
    <div bis_skin_checked="1">
        <label class="form-label mt-4">Edit Category</label>
        <div asp-validation-summary=All></div>
        <div class="form-floating mb-3" bis_skin_checked="1">
            <input asp-for="Name" type="text" class="form-control" id="floatingInput" placeholder="nhap category name">
            <label asp-for="Name">Category Name</label>
            <span asp-validation-for="Name" class="text-danger"></span>


        </div>
        <div class="form-floating mb-3" bis_skin_checked="1">

            <input asp-for="DisplayOrder" type="number" class="form-control" id="floatingPassword" placeholder="nhap Display Order" autocomplete="off">
            <label asp-for="DisplayOrder">Order</label>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>


        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">back</a>
    </div>
</form>
@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}