<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebBanSach</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
   
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Bootswatch.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebBanSach.styles.css" asp-append-version="true" />
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
</head>
<body>
    <header class="col-12">
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid" bis_skin_checked="1">
                <a class="navbar-brand" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01" bis_skin_checked="1">
                    <ul class="navbar-nav me-auto">
                       
                        <li class="nav-item">
                            <a asp-area="Customer" asp-area="" asp-controller="Home" asp-action="Index" class="nav-link" >Home</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-area="" asp-controller="Category" asp-action="Index" class="nav-link">Category</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-area="" asp-controller="Covertype" asp-action="Index" class="nav-link">Cover Type</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">About</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                            <div class="dropdown-menu" bis_skin_checked="1">
                               
                                <a asp-area="Admin" asp-area="" asp-controller="Category" asp-action="Index" class="dropdown-item">Category</a>
                                <a asp-area="Admin" asp-area="" asp-controller="Covertype" asp-action="Index" class="dropdown-item">Covertype</a>
                                <a asp-area="Admin" asp-area="" asp-controller="product" asp-action="Index" class="dropdown-item">Product</a>
                               
                            
                            </div>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-sm-2" type="search" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <section  class="container">
        <main role="main" class="pb-3">
            <partial name="_Noti" />
            @RenderBody()
        </main>
    </section>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebBanSach - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
